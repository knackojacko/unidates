    </div>

      <div class="form-group">
        <%= f.label :q7 %>
        <p> Meat <%= f.radio_button(:q7, "Cafe") %>
            Fruit <%= f.radio_button(:q7, "Restaurant") %></p>
    </div>

      <div class="form-group">
        <%= f.label :q8 %>
