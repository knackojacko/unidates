      </div>
    
      <div class="form-group">
        <%= f.label :q2 %>
        <p> Fox <%= f.radio_button(:q2, "Art") %>
            Mouse <%= f.radio_button(:q2, "Sport") %></p>
      </div>
      
      <div class="form-group">
        <%= f.label :q3 %>
        <p>Linking <%= f.radio_button(:q3, "Drinks") %>
           Billy <%= f.radio_button(:q3, "Clubbing") %></p>
