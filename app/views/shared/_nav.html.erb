  <header class="navbar transparent navbar-inverse navbar-fixed-top">
    <div class="container">
      <%= link_to "UniDates ❤", root_path, class: "navbar-brand logo" %>
      <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="collapse navbar-collapse navHeaderCollapse">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Chat", chats_path %></li>
            <li><%= link_to "My Matches", questionnaires_path %></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %> 
                <% if user_has_image?(@user.id) %>
                  <%= image_tag(@user.avatar.url(:icon), class:'circle', :style => "float:right; margin-top: 1px")%>
                <%else%>
                  <%= image_tag('default_profile.png', width: '26', height: '26')%>
                <%end%>
              </a>
            
              <ul class="dropdown-menu">
                <li><%= link_to "My Profile", current_user %></li>
                <li><%= link_to "Update Profile", edit_user_path(current_user) %></li>

                <% if current_user.questionnaire.blank? %>
                  <li><%= link_to "Preferences", new_questionnaire_path %></li>
                <%else  %>
                  <li><%= link_to "Update Preferences", edit_questionnaire_path(current_user.questionnaire.ids) %></li>
                <%end%>
                <li class="divider"/>
                <li><%= link_to "Log Out", logout_path, method: :delete %></li>
              </ul>
            </li>

          <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
        </ul>
      </div>
      </div>
  </header>
  