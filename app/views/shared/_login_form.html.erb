<%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: 'email', class: 'form-control custom' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'password', class: 'form-control custom' %>
    </div>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>