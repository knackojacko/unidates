<%= form_for(@report) do |f| %>

    <h3>Your Details:</h3>
    <div class="form-group">
      <%= f.label :Name, 'your name', class: 'form-control custom-label' %>
      <%= f.text_field :name, class: 'form-control custom', value: current_user.name %>
    </div>

    <div class="form-group">
      <%= f.label :Email, 'your email', class: 'form-control custom-label' %>
      <%= f.email_field :email, class: 'form-control custom', value: current_user.email %>
    </div>

    <br>

    <!--We shouldn't use a dropdown for the user as this will become MASSIVE if we had a larger userbase-->
    <h3>Their Details:</h3>
    <div class="form-group">
      <%= f.label "User", 'their name', class: 'form-control custom-label' %>
      <%= f.collection_select :reported_user_id, get_all_users, :id, :name do |b| %>
          <%= b.select :user %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :Reason, 'reason', class: 'form-control custom-label' %>
      <%= f.text_area :problem, class: 'form-control custom-textarea' %>
    </div>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit yield(:button_text), class: 'btn btn-block btn-success' %>
    </div>

    <div class="col-xs-3"><%= render 'shared/error_messages', object: @user %></div>
<% end %>