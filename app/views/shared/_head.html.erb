<head>
  <title>UniDates</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <% if logged_in? %>
      <style>
        body {
          /*https://www.peopleperhour.com/freelancer/thomas/designer-illustrator/361235*/
          background: url(<%= image_path('temporary_background.jpg') %>) no-repeat;
          background-size: cover;
          background-attachment: fixed;
          height: 100vh !important;
          width: 100vw !important;
        }

        .glass-back:before {
          background: url(<%= image_path('temporary_background.jpg') %>) no-repeat;
        }
      </style>
  <% else %>
      <style>
        body {
          background: url(<%= image_path('main_back.jpg') %>) no-repeat;
          background-size: cover;
          background-attachment: fixed;
          height: 100vh !important;
          width: 100vw !important;
        }
        .glass-back:before {
          background: url(<%= image_path('main_back.jpg') %>) no-repeat;
        }
      </style>
  <% end %>
</head>