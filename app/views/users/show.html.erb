    <%= questionnaire.q1 %>
    <%= questionnaire.q2 %>
    <%= questionnaire.q3 %>
    <%= questionnaire.q4 %>
    <%= questionnaire.q5 %>
    <%= questionnaire.q6 %>
    <%= questionnaire.q7 %>
